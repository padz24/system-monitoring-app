{
  "name": "system-monitoring-app",
  "version": "1.0.0",
  "description": "Lightweight system monitoring application optimized for Android/Termux",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "npm run dev:vite",
    "dev:vite": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "server:install": "cd server && npm install",
    "install:all": "npm install && npm run server:install",
    "start": "npm run server:dev",
    "lint": "eslint ."
  },
  "keywords": [
    "monitoring",
    "system",
    "termux",
    "android",
    "performance",
    "react",
    "nodejs"
  ],
  "author": "System Monitor Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "chart.js": "^4.4.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^2.30.0",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.2.1",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "rollup": "npm:@rollup/wasm-node@^4.50.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}
